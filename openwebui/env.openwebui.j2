# Internal CNAMEs
OLLAMA_BASE_URLS=http://ollama.{{ domain }}:11434
QDRANT_URI=http://qdrant.{{ domain }}:6333

# OpenAI-compatible provider (LiteLLM)
OPENAI_API_BASE_URLS=https://openai.{{ domain }}/v1
OPENAI_API_KEYS=dummy
DEFAULT_MODEL=agent/fast
OPENAI_API_BASE_URL=https://openai.{{ domain }}/v1
OPENAI_API_KEY=dummy
RESET_CONFIG_ON_START=true

# Secrets from vault
QDRANT_API_KEY={{ qdrant_api_key }}
WEBUI_SECRET_KEY={{ webui_secret_key }}

# SSO via Authentik (OIDC)
ENABLE_OAUTH_SIGNIN=true
OAUTH_PROVIDER=oidc
OAUTH_SCOPE=openid email profile

# Authentik OIDC credentials
OAUTH_CLIENT_ID={{ authentik_webui_client_id }}
OAUTH_CLIENT_SECRET={{ authentik_webui_client_secret }}

# Authentik OIDC endpoints
OAUTH_AUTH_URL=https://authentik.{{ domain }}/application/o/authorize/
OAUTH_TOKEN_URL=https://authentik.{{ domain }}/application/o/token/
OAUTH_USERINFO_URL=https://authentik.{{ domain }}/application/o/userinfo/

# Open WebUI OAuth redirect URI (must match Authentik provider config)
OAUTH_REDIRECT_URI=https://chat.{{ domain }}/oauth/callback

