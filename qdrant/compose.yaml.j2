version: "3.9"
services:
  qdrant:
    container_name: qdrant
    image: qdrant/qdrant:latest
    env_file: [.env.qdrant]
    ports:
      - "6333:6333"
    volumes: [/srv/docker/qdrant/storage:/qdrant/storage]
    restart: unless-stopped
    healthcheck:
      test: ["CMD","curl","-sf","http://localhost:6333/readyz"]
      interval: 15s
      timeout: 3s
      retries: 20

